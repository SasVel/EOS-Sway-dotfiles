#bindsym Alt+Shift_L exec "pkill -RTMIN+1 waybar"

#####################
# workspace layout: #
#####################

# default i3 tiling mode:
workspace_layout default

# i3 stacking layout:
# Each window will be fullscreen and tabbed top to bottom.
#workspace_layout stacking

# i3 tabbed layout:
# Each new window will open fullscreen as a tab (left to right)
#workspace_layout tabbed

##############################
# extra options for windows: #
##############################

#border indicator on windows:
default_border pixel 1

# thin borders
# hide_edge_borders both

# Set inner/outer gaps
gaps inner 3
gaps outer 0

# bind program to workspace and focus to them on startup:
assign [app_id="Alacritty"] $ws1
assign [class="obsidian"] $ws3
assign [class="code"] $ws4
assign [class="Godot_Editor"] $ws4
assign [instance="Godot_Engine"] $ws5
assign [class="GitHub Desktop"] $ws5
assign [class="VirtualBox Machine"] $ws6
assign [class="VirtualBox Manager"] $ws6

assign [class="(?i)firefox"] $ws10
assign [class="kitty"] $ws11
assign [class="discord"] $ws12

# automatic set focus new window if it opens on another workspace than the current:
for_window [app_id="Alacritty"] focus
for_window [class="VirtualBox Machine"] focus
for_window [class="VirtualBox Manager"] focus
for_window [instance="Godot_Engine"] focus
for_window [class="github desktop"] focus
for_window [class=(?i)firefox] focus
for_window [class=Thunderbird] focus
for_window [class=discord] focus
for_window [class=code] focus
